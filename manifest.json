{
  "manifest_version": 3,
  "name": "SessionVault",
  "version": "1.4.0",
  "description": "Powerful session management extension - Backup, restore, and organize your browsing sessions with smart tab grouping",
  "permissions": [
    "offscreen",
    "tabs",
    "storage",
    "tabGroups",
    "system.display",
    "topSites",
    "search"
  ],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_title": "Sort & Group tabs by domain",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "64": "icons/icon-64.png",
      "128": "icons/icon-128.png"
    }
  },
  "options_page": "options.html",
  "host_permissions": [
      "https://www.google.com/*",
      "https://t0.gstatic.com/*",
      "https://t1.gstatic.com/*",
      "https://t2.gstatic.com/*",
      "https://t3.gstatic.com/*",
      "https://favicon.yandex.net/*",
      "https://icons.duckduckgo.com/*",
      "https://api.allorigins.win/*",
      "https://suggestqueries.google.com/*",
      "https://clients1.google.com/*"
  ],
  "commands": {
    "resize-left": {
      "suggested_key": {
        "default": "Ctrl+Shift+Left"
      },
      "description": "Move window to the left"
    },
    "resize-right": {
      "suggested_key": {
        "default": "Ctrl+Shift+Right"
      },
      "description": "Move window to the right"
    },
    "resize-up": {
      "suggested_key": {
        "default": "Ctrl+Shift+Up"
      },
      "description": "Move window to the top"
    },
    "resize-down": {
      "suggested_key": {
        "default": "Ctrl+Shift+Down"
      },
      "description": "Move window to the bottom"
    }
  }
}
